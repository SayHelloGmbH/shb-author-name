{
	"$schema": "https://schemas.wp.org/trunk/block.json",
	"apiVersion": 2,
	"name": "shb/author-name",
	"version": "1.0.0",
	"title": "Author Name",
	"category": "theme",
	"icon": "admin-users",
	"description": "Provides a block which shows the name of the current author (on the author archive page or on the single post view).",
	"supports": {
		"html": false,
		"align": ["wide"]
	},
	"attributes": {
		"align": {
			"type": "string",
			"enum": ["wide"]
		},
		"classNameBase": {
			"type": "string"
		},
		"textAlign": {
			"type": "string",
			"enum": ["left", "center", "right"]
		}
	},
	"textdomain": "shb-author-name",
	"editorScript": "file:./index.js"
}
